<% if signed_in? %>
  <ul class="navbar-nav">
    <li class="nav-item dropdown">
      <a
          class="nav-link dropdown-toggle"
          href="#"
          id="navbarDropdownMenuLink"
          role="button"
          data-mdb-toggle="dropdown"
          aria-expanded="false"
        >
          <%= current_player.name %>
        </a>      
      <ul class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
        <li>
          <%= link_to "Profile", edit_player_registration_path, class:"dropdown-item" %>
        </li>
        <li>
          <%= button_to "Log out", destroy_player_session_path, method: :delete, data: { turbo: "false" }, class:"dropdown-item" %>
        </li>
      <% else %>
        <li>
          <%= link_to "Log in", new_player_session_path, class:"btn btn-info" %>
        </li>
        <li>
          <%= link_to "Register", new_player_registration_path, class:"btn btn-primary" %>
        </li>
      </ul>
    </li>
  </ul>
<% end %>
